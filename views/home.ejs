<html>
    <head>
        <link rel="stylesheet" type="text/css" href="stylesheets/style.css">
        <link rel="stylesheet" type="text/css" href="stylesheets/login.css">
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <script src="/js/jquery.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>

        <script type="text/javascript">
            function getUserId() {
                var url = window.location.href;
                return url.substring(url.indexOf("=") + 1, url.length);
            }
            function get_action_user(form) {
                form.action = "/challenge_user?uid=" + getUserId();
            }
            function get_action_comp(form) {
                form.action = "/challenge_comp?uid=" + getUserId();
            }
        </script>

    </head>

    <body>
        <h2 align="center">Home!</h2>
        <div class="row">
            <div class="col-sm-4">User Name : <%= name %></div>
            <div class="col-sm-4">Matches : <%= matches %></div>
            <div class="col-sm-4">Wins : <%= wins %></div>
        </div>
        <br />
        <h3 align="center"> Play Bingo!</h3>
        <div class="row" style="padding: 50px;">
            <div class="col-lg-3" align="left">
                    <form onsubmit="get_action_comp(this);" method="post">
                        <button type="submit" class="btn btn-default" id="submit">v/s Computer</button>
                    </form>
            </div>
            <div class="col-lg-3" align="right">
                    <form onsubmit="get_action_user(this);" method="post">
                        <button type="submit" class="btn btn-default" id="submit">v/s User</button>
                    </form>
            </div>
        </div>

    </body>
</html>