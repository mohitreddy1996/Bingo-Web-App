<html>
    <head>
        <link rel="stylesheet" type="text/css" href="stylesheets/style.css">
        <link rel="stylesheet" type="text/css" href="stylesheets/login.css">
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <script src="/js/jquery.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>

        <script type="text/javascript">
            function get_action(form) {
                form.action =  "/login?uid=" + document.getElementById("userId").value;
            }
        </script>

    </head>
    <body>
        <div class="main_heading">Bingo Game</div>

        <div class="container">
            <div class="row">
                <div class="form_bg">
                    <form onsubmit="get_action(this);" method="post" name="login_form">
                        <h2 class="text-center">Login Page</h2>
                        <br/>
                        <div class="form-group">
                            <input id="userId" type="text" class="form-control" name="userId" placeholder="User id">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="password" placeholder="Password">
                        </div>
                        <div class="align-center">
                            <button type="submit" class="btn btn-default" id="submit">Login</button>
                        </div>
                        <div class="align-left">
                            <a href="/register">Register Here.</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>


    </body>

</html>